include: "rules/common.smk"

#report: "report/workflow.rst" # Text

dir_path = os.getcwd()

threads_max=config['threads_max']
run_name=config['run_name']
ref_genome=config['ref_genome']
synteny_ref=config['synteny_ref']
synteny_abbr=config['synteny_abbr']


##### Config variables #####

window_sizes=config['window_sizes']
EDIT_DIST = config["edit_distance"]
MIN_SIZE_SCAFFOLD = config["minSizeScaffold"]
CHROMOSOMES = config['chr_file']
CHROMOSOMES_HIGHLIGHT = config['chr_highlight']

ref_genome_name = ref_genome[ref_genome.rindex('/')+1:]
ref_genome_name_simple = ref_genome_name.rpartition('.')[0]

synteny_ref_name = synteny_ref[synteny_ref.rindex('/')+1:]
synteny_ref_name_simple = synteny_ref_name.rpartition('.')[0]


##### Output directories #####


logs_dir="results/" + run_name + "/logs/"
qc_dir="results/" + run_name + "/qc/"
outdir="results/" + run_name + "/"
#report: outdir + "output/no_synteny/report/workflow.rst"
map_dir="results/ref/" + ref_genome_name_simple + "/mapped/"
dedup_dir="results/ref/" + ref_genome_name_simple + "/dedup/"


##### Target rules #####

    


#if config['stop_after_trim'] & config['trim_reads']:
if config['trim_reads']:
    rule multiqc_stop:
        input:
            qc_dir + "fastqc/multiqc.untrimmed.html" if config['trim_reads'] else [],
            qc_dir + "fastqc/multiqc.trimmed.html" if config['trim_reads'] else [],

rule all:
    input:
        qc_dir + "fastqc/multiqc.untrimmed.html" if config['trim_reads'] else [],
        qc_dir + "fastqc/multiqc.trimmed.html" if config['trim_reads'] else [],
        expand(outdir + "output/no_synteny/plots/" + "confirm_sexing_indv.{ED}.pdf", ED = EDIT_DIST),
        outdir + "output/no_synteny/plots/" + ".misc/" + "plotting_chr.done",
        expand(outdir + "output/no_synteny/plots/" + ".misc/" + "plotting.linear.{window}bp.done", window = window_sizes),
        expand(outdir + "output/no_synteny/plots/" + ".misc/" + "plotting.linear.{window}bp.done", window = window_sizes),
        outdir + "output/no_synteny/plots/" + ".misc/" + "plotting_chr.done",
        expand(outdir + "output/no_synteny/plots/" + ".misc/" + "plotting.{window}bp.done", window = window_sizes),
        expand(outdir + "output/no_synteny/plots/" + ".misc/" + "plotting.{window}bp.done", window = window_sizes)






